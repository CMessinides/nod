{
  "name": "nod",
  "version": "0.0.1",
  "description": "Notes and tasks, all in one place.",
  "main": "index.js",
  "repository": "git@github.com:CMessinides/nod.git",
  "author": "Cameron Messinides <cameron.messinides@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"yarn migrate up\" \"yarn build:client\" ",
    "build:client": "next build",
    "dev": "next dev",
    "migrate": "node-pg-migrate -m db/migrations",
    "seed": "node-pg-migrate -m db/seeds -t pgseeds",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "apollo-server-micro": "^2.8.0",
    "dotenv": "^8.0.0",
    "graphql": "^14.3.1",
    "isomorphic-fetch": "^2.2.1",
    "next": "^9.0.0",
    "pg": "^7.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "slugify": "^1.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@testing-library/react": "^8.0.7",
    "@types/next": "^8.0.5",
    "@types/pg": "^7.4.14",
    "@types/react": "^16.8.19",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "node-pg-migrate": "^3.21.1",
    "prettier": "^1.17.1",
    "prop-types": "^15.7.2",
    "typescript": "^3.5.3"
  }
}
